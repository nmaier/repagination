<?xml version="1.0"?>
<overlay id="repagination" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<script type="application/x-javascript"><![CDATA[
    // loader stub for pre-moz-2.0
		addEventListener('load', function() {
			removeEventListener('load', arguments.callee, true);
			let _m = {};
			Components.utils.import("resource://repagination/bootstrap.js", _m);
			_m.main(window);
		}, true);
	]]></script>
	<popup id="contentAreaContextMenu">
		<menu label="repagination" insertbefore="context-sep-open" id="repagination_menu">
			<menupopup>
				<menuitem id="repagination_flatten_nolimit" label="loadall" />
				<menu id="repagination_flat_limit_menu" label="limited">
					<menupopup>
						<menuitem label="limited.pages(2)" value="2" />
						<menuitem label="limited.pages(5)" value="5" />
						<menuitem label="limited.pages(10)" value="10" />
						<menuitem label="limited.pages(15)" value="15" />
						<menuitem label="limited.pages(20)" value="20" />
						<menuitem label="limited.pages(25)" value="25" />
						<menuitem label="limited.pages(30)" value="30" />
						<menuitem label="limited.pages(40)" value="40" />
						<menuitem label="limited.pages(50)" value="50"/>
						<menuitem label="limited.pages(100)" value="100" />
					</menupopup>
				</menu>
				<menu id="repagination_flat_nolimit_slide" label="slideshow">
					<menupopup>
						<menuitem label="slideshow.immediately" value="0" />
						<menuitem label="slideshow.second" value="1" />
						<menuitem label="slideshow.seconds(2)" value="2" />
						<menuitem label="slideshow.seconds(4)" value="4" />
						<menuitem label="slideshow.seconds(5)" value="5" />
						<menuitem label="slideshow.seconds(10)" value="10" />
						<menuitem label="slideshow.seconds(15)" value="15" />
						<menuitem label="slideshow.seconds(30)" value="30" />
						<menuitem label="slideshow.minute" value="60" />
						<menuitem label="slideshow.minutes(2)" value="120" />
					</menupopup>
				</menu>
				<menuitem id="repagination_stop" label="stop" />
			</menupopup>
		</menu>
	</popup>
</overlay>
